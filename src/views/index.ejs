<%- include('parts/header') %>

<section class="m-4 p-4">
	<div class="container">
		<h2 class="text-center">Kategoriyalar</h2>

		<div class="row g-4">
			<% for(let category of categories) {%>
			<div class="col-lg-4 col-md-6">
				<div class="card text-center" style="flex-grow: 1">
					<img
						src="public/images/<%= category.photo%>"
						class="card-img-top"
						style="
							height: 200px;
							width: 200px;
							object-fit: cover;
							margin: 0 auto;
						"
						alt="..."
					/>
					<div class="card-body">
						<a
							href="/category/<%= category._id%>"
							class="btn btn-primary m-0 p-2"
							><h5 class="card-title p-0 m-0">
								<%= category.name%>
							</h5></a
						>
					</div>
				</div>
			</div>
			<%} %>
		</div>
	</div>
</section>

<%- include('parts/footer') %>
